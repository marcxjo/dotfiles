if [[ -e /etc/X11/xinit/xinitrc-common ]] ; then
  . /etc/X11/xinit/xinitrc-common
fi

# I WANT MY DAMN NUM LOCK ON WHEN I LOG IN
NUM_LOCK_STATE=$(xset -q | grep Caps | awk '{print $8}')

if [ "$NUM_LOCK_STATE" == "off" ]; then
	xdotool key Num_Lock
fi

# Set up default Xresources for basic theming
xrdb ~/.Xresources

# bspwm inherits X11's default "X" shaped cursor
# Here we fix that
xsetroot -cursor_name left_ptr

# Start PulseAudio
which pulseaudio 2>/dev/null && pulseaudio --start

# Start screensaver
which xscreensaver 2>/dev/null && xscreensaver -no-splash &

exec bspwm
