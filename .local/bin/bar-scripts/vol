#!/bin/sh

# Current system volume.
# TODO: left- and right-click to lower and raise volume respectively.

vol=$(pamixer --get-volume)

if [ $vol -ge 80 ] ; then
	vcolor="%{F${color1}}"
elif [ $vol -ge 20 ] ; then
	vcolor="%{F${color2}}"
else
	vcolor="%{F${color8}}"
fi

printf "%-4s %14s%%%5s" "ÓÅé" "${vcolor}${vol}" "%{F-}"
