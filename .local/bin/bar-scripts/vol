#!/bin/sh

# Current system volume.
# TODO: left- and right-click to lower and raise volume respectively.

#vol=$(pamixer --get-volume)
#vol=$(awk '/%/ {gsub(/[\[\]]/,""); print $5}' <(amixer sget Master) | head -n1)
vol=$(amixer sget Master | awk -F"[][]" '/%/ { print $2 }' | head -n1)

# Add blank space to correct offsetting issues with subsequent status icons.
printf "%s%-4s%5s%-6s" "%{F${color6}}"  "îŽ" "%{F-}" "${vol}"
