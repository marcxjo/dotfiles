#!/bin/sh

# Network ID for the wifi connection.

a="$(nmcli connection show --active | grep "802-11-wireless" | awk '{print $1}')"
if [ "$a" != "" ] ; then
  connected="up"
else
  connected="down"
fi

# ESSIDs can be up to 32 characters long.
# However, that's stupid. 16 should do it and still
# look pretty decent.
printf "%s%-4s%5s%s%-4s%s" "%{F${color6}}" "îƒ°" "%{F-}" "%{A:notify-send \"Network Connection\" \"$a\":}" "$connected" "%{A}"
