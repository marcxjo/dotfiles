#!/bin/sh

# Stupidterm ini generator for themer.

cat <<-STUPIDTERM_INI >${theme_dir}/stupidterm.ini
	[options]
	font = Terminus 10
	lines = 5000
	allow-bold = true
	scroll-on-output = false
	scroll-on-keystroke = true
	mouse-autohide = true
	sync-clipboard = true
	urgent-on-bell = false

	[colors]

	## ${theme_name}

	## Main Colors
	background = $(printf "rgba(%d,%d,%d,0.9)" "0x${colorbg:1:2}" "0x${colorbg:3:2}" "0x${colorbg:5:2}")
	foreground = ${colorfg}

	## ANSI Colors
	color0  = $color0
	color1  = $color1
	color2  = $color2
	color3  = $color3
	color4  = $color4
	color5  = $color5
	color6  = $color6
	color7  = $color7
	color8  = $color8
	color9  = $color9
	color10 = $color10
	color11 = $color11
	color12 = $color12
	color13 = $color13
	color14 = $color14
	color15 = $color15

	[urlmatch]
	program = /usr/bin/ttabbed surf -e
	regex = (((gopher|news|telnet|nntp|file|http|ftp|https)://)|(www|ftp)[-A-Za-z0-9]*\\.)[-A-Za-z0-9\\.]+(:[0-9]*)?(/[-A-Za-z0-9_\\$\\.\\+\\!\\*\\(\\),;:@&=\\?/~\\#\\%]*[^]'\\.}>\\) ,\\\"])?
STUPIDTERM_INI
