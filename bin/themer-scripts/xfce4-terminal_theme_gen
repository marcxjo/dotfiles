#!/bin/sh

# xfce4-terminal colorscheme generator for themer.

cat <<-XFCE4_THEME >${theme_dir}/${theme_name}.theme
	[Scheme]
	Name=${theme_name}
	ColorForeground=$colorfg
	ColorBackground=$colorbg
	ColorPalette=$color0;$color1;$color2;$color3;$color4;$color5;$color6;$color7;$color8;$color9;$color10;$color11;$color12;$color13;$color14;$color15
XFCE4_THEME
