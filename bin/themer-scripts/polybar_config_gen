#!/bin/sh

# Polybar config file generator for themer.

cat <<-POLYBAR_CONFIG >${theme_dir}/polybar
	[colors]
	colorfg = "${colorfg}"
	colorbg = "${colorbg}"
	color0 = "${color0}"
	color1 = "${color1}"
	color2 = "${color2}"
	color3 = "${color3}"
	color4 = "${color4}"
	color5 = "${color5}"
	color6 = "${color6}"
	color7 = "${color7}"
	color8 = "${color8}"
	color9 = "${color9}"
	color10 = "${color10}"
	color11 = "${color11}"
	color12 = "${color12}"
	color13 = "${color13}"
	color14 = "${color14}"
	color15 = "${color15}"

	[bar/top]
	monitor = \${env:MONITOR:DVI-1}
	width = 1824
	height = 20
	offset-x = 48
	offset-y = 8
	radius = 0
	fixed-center = true

	background = "#E6${colorbg:1}"
	foreground = "#E6${colorfg:1}"

	border-size = 2
	border-color = "#E6${color0:1}"

	padding-left = 2
	padding-right = 2

	module-margin-left = 2
	module-margin-right = 2

	font-0 = ttyp0:pixelsize=12;2
	font-1 = unifont:fontformat=truetype:size=8:antialias=false;2
	font-2 = siji:pixelsize=10;2

	modules-left = wlan memory cpu xkeyboard
	modules-center = date weather
	modules-right = volume player

	tray-position = right
	tray-padding = 2

	wm-restack = bspwm

	override-redirect = false

	scroll-up = bspwm-desknext
	scroll-down = bspwm-deskprev

	cursor-click = pointer
	cursor-scroll = ns-resize

	[bar/top-2]
	inherit = bar/top

	monitor = \${env:MONITOR:DVI-0}
	width = 1504

	[bar/bottom]
	inherit = bar/top

	bottom = true

	modules-left = xwindow
	modules-center =
	modules-right = bspwm

	[bar/bottom-2]
	inherit = bar/bottom

	monitor = \${bar/top-2.monitor}
	width = \${bar/top-2.width}

	[module/xwindow]
	type = internal/xwindow

	format = <label>
	format-prefix = "  "
	format-prefix-foreground = \${colors.color14}

	label = "%title:0:64:...%"

	[module/xkeyboard]
	type = internal/xkeyboard

	blacklist-0 = num lock
	blacklist-1 = caps lock

	format-prefix = " "
	format-prefix-foreground = \${colors.color1}

	label-layout = %layout:3:3%

	label-indicator-padding = 2
	label-indicator-margin = 1
	label-indicator-background = \${colors.color2}

	[module/bspwm]
	type = internal/bspwm

	ws-icon-0 = wksp_1_1;*
	ws-icon-1 = wksp_1_2;*
	ws-icon-2 = wksp_1_3;*
	ws-icon-3 = wksp_2_1;*
	ws-icon-4 = wksp_2_2;*
	ws-icon-5 = wksp_2_3;*
	ws-icon-default = *

	label-focused = %icon%
	label-focused-foreground = \${colors.color15}
	label-focused-padding = 2

	label-occupied = %icon%
	label-occupied-foreground = \${colors.color3}
	label-occupied-padding = 2

	label-urgent = %icon%
	label-urgent-foreground = \${colors.color2}
	label-urgent-padding = 2

	label-empty = %icon%
	label-empty-foreground = \${colors.colorfg}
	label-empty-padding = 2

	[module/cpu]
	type = internal/cpu

	interval = 2
	format-prefix = " "
	format-prefix-foreground = \${colors.color13}
	label = %percentage:2%%

	[module/memory]
	type = internal/memory

	interval = 2
	format-prefix = " "
	format-prefix-foreground = \${colors.color3}
	label = %percentage_used%%

	[module/player]
	type=custom/script

	format = <label>
	format-prefix = " "
	format-prefix-foreground = \${colors.color7}

	exec = ~/.config/polybar/scripts/player-mpris-tail.py
	tail = true

	click-left = ~/.config/polybar/scripts/player-ctrl.sh previous
	click-right = ~/.config/polybar/scripts/player-ctrl.sh next
	click-middle = ~/.config/polybar/scripts/player-ctrl.sh play-pause

	[module/wlan]
	type = internal/network

	interface = wlp0s26f7u2
	interval = 3.0

	format-connected = <label-connected>
	label-connected = up
	format-connected-prefix = " "
	format-connected-prefix-foreground = \${colors.color7}

	format-disconnected = <label-disconnected>
	label-disconnected = dn
	format-disconnected-prefix = " "
	format-disconnected-prefix-foreground = \${colors.color7}

	[module/date]
	type = internal/date

	interval = 5

	date =
	date-alt = "%a, %b %d "

	time = "%I:%M %p"
	time-alt = "%I:%M %p"

	format-prefix = " "
	format-prefix-foreground = \${colors.color12}

	label = %date% %time%

	[module/weather]
	type = custom/script

	interval = 3600

	format = <label>
	format-prefix = " "
	format-prefix-foreground = \${colors.color9}

	exec = ~/.config/polybar/scripts/weather

	[module/volume]
	type = internal/volume

	format-volume = <label-volume>
	format-volume-prefix = " "
	format-volume-prefix-foreground = \${colors.color11}

	label-volume = "%percentage:3:3:%%"

	format-muted-prefix = " "
	format-muted-foreground = \${colors.color15}

	label-muted = off

	bar-volume-width = 10
	bar-volume-foreground-0 = \${colors.color3}
	bar-volume-foreground-1 = \${colors.color3}
	bar-volume-foreground-2 = \${colors.color3}
	bar-volume-foreground-3 = \${colors.color3}
	bar-volume-foreground-4 = \${colors.color3}
	bar-volume-foreground-5 = \${colors.color2}
	bar-volume-foreground-6 = \${colors.color1}
	bar-volume-gradient = false
	bar-volume-indicator = ¤
	bar-volume-indicator-font = 2
	bar-volume-indicator-foreground = \${colors.color15}
	bar-volume-fill = ─
	bar-volume-fill-font = 2
	bar-volume-empty = ─
	bar-volume-empty-font = 2
	bar-volume-empty-foreground = \${root.foreground}

	[settings]
	screenchange-reload = true

	[global/wm]
	margin-top = 0
	margin-bottom = 0

	; vim:ft=dosini
POLYBAR_CONFIG
