#!/bin/bash

declare -r CONFIG_DIR="${HOME}/.config/waybar"
declare -r THEMES_DIR="${CONFIG_DIR}/colors"

declare -r CURRENT_THEME_FILE="${THEMES_DIR}/theme.css"

declare THEME

list_waybar_themes() {
  # shellcheck disable=SC2012
  # Theme files _should_ have alphanum-only names
  ls "${THEMES_DIR}" | sed 's/.css//'
}

build_theme_path() {
  local -r _theme_name="$1"

  echo "${THEMES_DIR}/${_theme_name}.css"
}

set_waybar_theme() {
  local -r _theme="$1"

  if [[ ! -r "${_theme}" ]]; then
    echo "Theme does not exist!"
    exit 1
  fi

  ln -sfn "$_theme" "$CURRENT_THEME_FILE"
}

while getopts :ls: o; do
  case "$o" in
  l)
    list_waybar_themes
    exit 0
    ;;
  s)
    if [[ ! -L "${CURRENT_THEME_FILE}" ]]; then
      echo "Theme file is not a symlink!"
      exit 1
    fi

    THEME="$(build_theme_path "$OPTARG")"
    set_waybar_theme "$THEME"
    exit 0
    ;;
  *)
    exit 0
    ;;
  esac
done
