#!/bin/sh

# Start compositor
compton &

# Set background.
set-background -t bspwm -w &

# Set desktop colors.
# TODO: fix symlinking in themer script.
#set-desktop-colors &

xrdb ~/.Xresources &

if [ -f "${HOME}/.local/share/themes/bspwm/colors.xresources" ]; then
  xrdb -merge "${HOME}/.local/share/themes/bspwm/colors.xresources"
fi

# Start panels.
panel -s &

# Start notifier.
ddunst &
